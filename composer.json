{
  "name": "jarzon/chatterbot",
  "type": "project",
  "autoload": {
    "psr-4": {"Chatterbot\\": "src/"}
  },
  "config": {
    "bin-dir": "bin",
    "discard-changes": true
  },
  "require": {
    "php": ">=7.0.0",
    "jarzon/prim": "~0.12.0",
    "slowprog/composer-copy-file": "~0.2",
    "jarzon/primpack": "^0.5.0",

    "jarzon/pagination": "~0.1.0",
    "jarzon/localization": "~0.1.0",

    "robmorgan/phinx": "^0.6.4",

    "team-reflex/discord-php": "~4.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "6.2.*"
  },
  "scripts": {
    "post-install-cmd": [
      "SlowProg\\CopyFile\\ScriptHandler::copy"
    ]
  },
  "extra": {
    "copy-file": {
      "app/config/config.php.dist": "app/config/config.php",
      "phinx.yml.dist": "phinx.yml"
    },

    "copy-config": "config/external-copy.php"
  }
}